<!DOCTYPE html>
<html>
<head>
  <title>ChoreTracker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Modification to add sign-in/out links to all views in the app -->

<% if user_signed_in? %>
  <%= link_to "Sign Out #{current_user.email}", destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to "Existing User Sign In", new_user_session_path %>
<% end %>

<%= yield %>

</body>
</html>
